<div class="container">
    <% if (locals.user && locals.user.id == profile_user.id) { %>
        <!-- if user matches, show the form -->
        <div class="row">
            <div class="col s12 m4 vertical-align">
            <img class="responsive-img" src="<%= user.avatar %>" alt="<%= user.name %>">
            </div>
            <div class="col s12 m8">
                <div class="container">
                    <form action="/users/update/<%= user.id %>" method="POST" enctype="multipart/form-data">
                        <div class="row">
                            <div class="input-field col s12">
                                <i class="material-icons prefix">account_circle</i>
                                <input id="Name" type="text" class="validate" name="name" placeholder="Your Name" value="<%= user.name %>" required>
                                <label for="Name">Name</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <i class="material-icons prefix">mail</i>
                                <input id="Email" type="email" class="validate" name="email" placeholder="Your Email" value="<%= user.email %>" required>
                                <label for="Email">Email</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="file-field input-field">
                                <div class="btn">
                                <span>File</span>
                                <input type="file" name="avatar" placeholder="profile-picture">
                                </div>
                                <div class="file-path-wrapper">
                                <input class="file-path validate" type="text">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12 right-align">
                                <button class="btn waves-effect waves-light" type="submit">Submit
                                    <i class="material-icons right">edit</i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
        </div>
    <% } else { %>
        <h5>Welcome, <%= profile_user.name %> </h5>
        <h5>Email id: <%= profile_user.email %> </h5>
    <% } %> 
</div>